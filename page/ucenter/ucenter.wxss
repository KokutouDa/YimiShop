.ucenter-container {

}

.user-info-box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
  color: black;
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;
}

.user-info-img {
  width: 150rpx;
  height: 150rpx;
   border-radius: 50%; 
  margin-bottom: 20rpx;
  border-image-outset: 7rpx 12rpx 14rpx 5rpx;
  border: medium dashed white;
  box-shadow: 0rpx 5rpx 10rpx rgb(228, 228, 228);
}

.list-box {
  background-color: white;
  padding: 20rpx;
  padding-right: 0;
}

.list-my-order {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-all-order {
  font-size: 30rpx;
  color: #666666;
}

