.base-footer-box {
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  height: 92rpx;
  border-top: thin solid #E5E5E5;
}

 ::-webkit-scrollbar {
  display: none;
} 

.icon-arrow {
  width: 60rpx;
  height: 60rpx;
  transform: rotate(0.75turn);
  margin-left: 10rpx;
}

