@import "../tpl/product/product-tpl.wxss";
@import "/page/tpl/cart/cart-tpl.wxss";
@import "../tpl/base.wxss";

.index-container {
  display: flex;
  height: 100%;
}

.header-box {
  background-color: white;
  border-bottom: 1rpx solid #EDEDED;
}

.header-img {
  width: 90rpx;
  height: 90rpx;
}

.main-box {
  display: flex;
  flex: 1;
}

.main-left-box {
  text-align: center;
  width: 150rpx;
  background-color: #f5f5f5;
  overflow: auto;
  margin: 92rpx 0;
  /* margin-bottom: 92rpx; */
}

.main-right-box {
  background-color: white;
  overflow-x: hidden; 
  flex: 1;
  margin-bottom: 92rpx;
}

.left-box::-webkit-scrollbar, .right-box::-webkit-scrollbar {
  display: none;
}

.left-ucenter {
  position: fixed;
  top: 0;
  right: 0p;
  display: flex;
  justify-content: center;  
  align-items: center;
  height: 92rpx;
  width: 150rpx;   
  background-color: white;
  border-bottom: 1rpx solid #EDEDED;
}

.left-ucenter-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.left-item {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  border-bottom: 1rpx solid #EDEDED;
  padding: 10rpx;
}

.num {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center; 
  top: 0;
  right: 0;
  width: 30rpx;
  height: 30rpx;
  background-color: red;
  color: white;
  border-radius: 3em;
  font-size: 23rpx;
  visibility: hidden;
}

.right-item {
  display: flex;
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #D9D9D9;
}

.right-item-img {
  width: 150rpx;
  height: 150rpx;
}

.right-item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;    
}
.right-item-info>view {
   padding: 0 20rpx; 
}

.right-item-bottom {
  display: flex;
  justify-content: space-between;
}

.bottom-qty-box {
  display: flex;
  align-items: center; 
  color: #454553;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.bottom-qty-box>image {
  width: 40rpx;
  height: 40rpx;
}
.qty-subtract {
   visibility: hidden;  
}
.qty-text {
  text-align: center;
  width: 70rpx;
  visibility: hidden;  
}

.visible {
  visibility: visible;
}

.selected {
  background-color: pink;
  color: white;
  font-weight: bolder;
}

.footer-box {
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  height: 92rpx;
  border-top: thin solid #E5E5E5;
}

.empty {
  text-align: center;
  flex: 1;
  margin-top: 100rpx;
}

.footer-box {
  justify-content: space-between;
}

.footer-left {
  display: flex;
  height: 100%;
  align-items: center;
  margin-left: 20rpx;
}

.footer-cart {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 130rpx;
  height: 130rpx;
  margin-bottom: 30rpx;
  
}

.footer-cart-view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 110rpx;
  height: 110rpx;
  background-color: rgba(255, 192, 203, 1);
  border-radius: 80rpx;
  border: 10rpx solid #f4f4f4;
  box-shadow: 0rpx -3rpx 2rpx #DDDDDD;
}

.footer-cart-image {
  width: 50rpx;
  height: 50rpx;
}

.footer-cart-view.disable {
  background-color: #DDDDDD;
}

.footer-price {
  margin-left: 20rpx;
}

.footer-right {
  display: flex;
  width: 200rpx;
  justify-content: center;
  align-items: center; 
}

.footer-right.disable {
  background-color: #DDDDDD;
}

.footer-right-hover {
  background-color: rgba(255, 192, 203, 0.7);
}