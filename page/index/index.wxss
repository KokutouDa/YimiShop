@import "../tpl/product/product-tpl.wxss";
@import "/page/tpl/cart/cart-tpl.wxss";

.index-container {
  display: flex;
  flex-direction: row;
  height: 100%;
}

.left-box {
  text-align: center;
  width: 150rpx;
  background-color: #f5f5f5;
  overflow: auto;
  margin-bottom: 92rpx;
}

.right-box {
  background-color: white;
  overflow-x: hidden; 
  flex: 1;
  margin-bottom: 92rpx;
}

.left-box::-webkit-scrollbar, .right-box::-webkit-scrollbar {
  display: none;
}

.left-item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #EDEDED;
  padding: 10rpx;
}

.right-item {
  display: flex;
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #D9D9D9;
}

.right-item-img {
  width: 150rpx;
  height: 150rpx;
}

.right-item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;    
}
.right-item-info>view {
   padding: 0 20rpx; 
}

.right-item-bottom {
  display: flex;
  justify-content: space-between;
}

.bottom-qty-box {
  display: flex;
  align-items: center; 
  color: #454553;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.bottom-qty-box>image {
  width: 40rpx;
  height: 40rpx;
}
.qty-subtract {
  visibility: hidden;
}
.qty-text {
  text-align: center;
  width: 70rpx;
  visibility: hidden;
}

.visible {
  visibility: visible;
}

.selected {
  background-color: pink;
  color: white;
  font-weight: bolder;
}